<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Form Ubah Kontak</h2>

            <% if (typeof errors != 'undefined') { %>
              <div class="alert alert-danger" role="alert">
                <ul>
                  <% errors.forEach(error => { %>
                    <li><%= error.msg %></li>
                  <% }) %>
                </ul>
              </div>
            <% } %>

            <form method="post" action="/contact?_method=PUT">
              <input type="hidden" name="_id" value="<%= contact._id %>">
              <input type="hidden" name="oldNama" value="<%= (contact.oldNama) ? contact.oldNama : contact.nama %>">
                <div class="mb-3">
                  <label for="nama" class="form-label">Nama</label>
                  <input type="text" class="form-control" id="nama" name="nama" value="<%= contact.nama %>">
                </div>
                <div class="mb-3">
                    <label for="phone" class="form-label">Phone</label>
                    <input type="text" class="form-control" id="phone" name="phone" value="<%= contact.phone %>">
                  </div>
                  <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" value="<%= contact.email %>">
                  </div>
                <button type="submit" class="btn btn-primary rounded-0">Ubah Data Kontak</button>
              </form>
        </div>
    </div>
</div>